<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rsv.webimageview.example"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <!-- to download images -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- to cache the images -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rsv.webimageview.example.ImageList"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.rsv.webimageview.example.ImageJava"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.rsv.webimageview.example.ImageXml"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="com.rsv.webimageview.example.ImageListSameUrl"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.rsv.webimageview.example.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>